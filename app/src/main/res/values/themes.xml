<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ChatApps" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/DarkBlue</item>
        <item name="android:windowBackground">@color/DarkBlue</item>
        <item name="android:navigationBarColor">@color/DarkBlue</item>
    </style>

    <style name="Theme.SplashChatApps" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/DarkBlue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.ChatApps</item>
    </style>
</resources>